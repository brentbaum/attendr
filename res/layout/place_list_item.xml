<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="150dp"
	android:background="@drawable/event_item_background" android:gravity="left|center"
	android:orientation="horizontal">
	<ImageView android:contentDescription="blah" 
	    android:id="@+id/place_picture"
		android:layout_width="120dp" 
		android:layout_height="120dp"
		android:paddingTop="10dp"
		android:paddingLeft="15dp"
		android:paddingBottom="10dp"
		android:paddingRight="15dp"
		android:layout_gravity="center_vertical"
		android:gravity="center_vertical" />

	<LinearLayout android:id="@+id/place_text_container"
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:padding="10dp"
		android:orientation="vertical">

		<TextView android:id="@+id/place_name" 
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:layout_gravity="left"
			android:gravity="left" 
			android:layout_marginTop="5dp"
			android:textColor="#333333" 
			android:textAlignment="inherit"
			android:textSize="20sp" />
		<TextView android:id="@+id/place_description"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_gravity="left" 
			android:layout_marginTop="4dp"
			android:gravity="left" 
			android:textColor="#333333" 
			android:textSize="17sp"
			android:typeface="normal" />
		<TextView android:id="@+id/number_of_attendees"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layout_gravity="left" 
			android:layout_marginRight="4dp"
			android:layout_marginTop="5dp"
			android:gravity="left"
			android:textAlignment="inherit" android:textColor="#777777" />
		<TextView android:id="@+id/place_id" android:layout_width="0dp"
			android:layout_height="0dp"
			android:textSize="0sp" />
	</LinearLayout>

</LinearLayout>